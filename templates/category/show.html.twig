{# templates/program/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Catégory #{{ category.name }}{% endblock %}


{% block body %}
    <h1>List of series in {{ category.name }} category </h1>
{% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.synopsis }}</p>
            {# Lien vers la fiche de la série : #}
            <a href="{{ path("program_show", { slug: program.slug }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

<a href="{{ path('program_index') }}">
    Retour à la liste des programmes
</a>

{% endblock %}