{# templates/program/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}


{% block body %}

	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>
		</div>

		<div class="d-block">
			{% for season in seasons %}
				<h2>Saison :
					{{season.number }}</h2>
				<p>Année :
					{{ season.year }}</p>
				<p>Description :
					{{ season.description }}</p>
				{# Lien vers la fiche détaillé de la saison : #}
				<a class="fiche" href="{{ path("program_season_show", { "programId": program.id, "seasonId": season.id }) }}">Voir la fiche</a>
			{% else %}
				Aucune saison trouvée.
			{% endfor %}
		</div>
	</div>
<br>
<br>

	<a href="{{ path('program_index') }}">
		Retour à la liste des programmes
	</a>

<br><br>

<strong>Acteurs :</strong>
<ul>
	{% for actor in program.actors %}
		<li>
			<a href="{{ path('actor_show', {"id":actor.id}) }}">
				{{ actor.name }}
			</a>
		</li>
	{% else %}
		<li>Aucun acteur pour cette série</li>
	{% endfor %}
</ul>


{% endblock %}
