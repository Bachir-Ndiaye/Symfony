{% extends 'base.html.twig' %}


{% block title %}All programs{% endblock %}


{% block body %}

    <h1>Toutes les séries de la table program : </h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button>Search</button>
        {{ form_end(form) }}

    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.synopsis }}</p>
            {# Lien vers la fiche de la série : #}
            <a class="fiche" href="{{ path("program_show", { slug: program.slug }) }}">Voir la fiche</a>
            {% if is_granted("ROLE_ADMIN") %}
                <a href="{{ path('program_edit', { slug: program.slug} ) }}">Éditer</a>
            {% endif %}
            {% if app.user %}
                <a id="watchlist" href="{{ path('program_watchlist', {id: program.id})}}">
                    <i class="bi {{ app.user.isInWatchlist(program) ? 'bi-heart-fill' : 'bi-heart' }}"></i>
                </a>
            {% endif %}

        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>

<h3>
	<a href="{{ path('program_new') }}">
		Ajout d'un nouveau programme
	</a>
</h3>

{% endblock %}